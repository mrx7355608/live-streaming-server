{
    "compilerOptions": {
        "types": ["node", "jest"],
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@/core/*": ["core/*"],
            "@/adapters/*": ["adapters/*"],
            "@/data/*": ["data/*"],
            "@/frameworks/*": ["frameworks/*"]
        },
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
